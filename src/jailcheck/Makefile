ROOT = ../..
-include $(ROOT)/config.mk

.PHONY: all
all: jailcheck

include $(ROOT)/src/common.mk

%.o : %.c $(HDRS) ../include/common.h ../include/pid.h $(ROOT)/config.mk
	$(CC) $(CFLAGS) $(EXTRA_CFLAGS) $(INCLUDE) -c $< -o $@

jailcheck: $(OBJS) ../lib/common.o ../lib/pid.o $(ROOT)/config.mk
	$(CC)  $(LDFLAGS) -o $@ $(OBJS) ../lib/common.o ../lib/pid.o $(LIBS) $(EXTRA_LDFLAGS)

.PHONY: clean
clean:; rm -fr *.o jailcheck *.gcov *.gcda *.gcno *.plist

.PHONY: distclean
distclean: clean
